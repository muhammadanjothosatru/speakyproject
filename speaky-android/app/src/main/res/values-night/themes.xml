<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Speaky" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_700</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_700</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/vision_bold</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@drawable/autofill</item>
        <item name="colorButtonNormal">@color/blue_700</item>
        <item name="textAllCaps">false</item>
        <item name="colorAccent">@color/blue_700</item>

    </style>

    <style name="Theme.Speaky.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_700</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_700</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/vision_bold</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@drawable/autofill</item>
        <item name="android:buttonTint">@color/blue_700</item>
        <item name="colorAccent">@color/blue_700</item>
    </style>

    <style name="customButtonRect" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_custom_rect</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>
    <style name="customButton" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/btn_custom</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="customButtonY" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/btn_custom_y</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="customButtonWhite" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/btn_custom_white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/blue_700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="inputBox">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:background">@drawable/et_custom</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="regularText">
        <item name="android:layout_height">wrap_content</item>
